<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.robcutmore.vinotes"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:label="@string/app_name"
            android:name=".ui.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/title_activity_add_note"
            android:launchMode="singleTop"
            android:name=".ui.AddNoteActivity"
            android:parentActivityName=".ui.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>

        <activity
            android:label="@string/title_activity_select_winery"
            android:name=".ui.SelectWineryActivity"
            android:parentActivityName=".ui.AddNoteActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.AddNoteActivity" />
        </activity>

        <activity
            android:label="@string/title_activity_select_wine"
            android:name=".ui.SelectWineActivity"
            android:parentActivityName=".ui.AddNoteActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.AddNoteActivity" />
        </activity>

    </application>
</manifest>
