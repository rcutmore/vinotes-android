<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.robcutmore.vinotes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:label="@string/app_name"
            android:name=".activities.HomeActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/title_note_add"
            android:launchMode="singleTop"
            android:name=".activities.ManageNoteActivity"
            android:parentActivityName=".activities.HomeActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.HomeActivity" />
        </activity>

        <activity
            android:label="@string/title_winery_select"
            android:name=".activities.SelectWineryActivity"
            android:parentActivityName=".activities.ManageNoteActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ManageNoteActivity" />
        </activity>

        <activity
            android:label="@string/title_wine_select"
            android:name=".activities.SelectWineActivity"
            android:parentActivityName=".activities.ManageNoteActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ManageNoteActivity" />
        </activity>

        <activity
            android:label="@string/title_traits_default_select"
            android:name=".activities.SelectTraitsActivity"
            android:parentActivityName=".activities.ManageNoteActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ManageNoteActivity" />
        </activity>

        <!-- Authentication -->
        <activity android:name=".authentication.LoginActivity" android:label="@string/title_login" />
        <activity android:name=".authentication.RegisterActivity" android:label="@string/title_register" />
        <service
            android:name=".authentication.VinotesAuthenticatorService"
            android:enabled="true"
            android:exported="true"
            android:process=":auth">

            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

</manifest>
