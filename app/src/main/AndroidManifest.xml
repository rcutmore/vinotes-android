<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.robcutmore.vinotes"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:label="@string/app_name"
            android:name=".ui.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/title_note_add"
            android:launchMode="singleTop"
            android:name=".ui.ManageNoteActivity"
            android:parentActivityName=".ui.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>

        <activity
            android:label="@string/title_winery_select"
            android:name=".ui.SelectWineryActivity"
            android:parentActivityName=".ui.ManageNoteActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ManageNoteActivity" />
        </activity>

        <activity
            android:label="@string/title_wine_select"
            android:name=".ui.SelectWineActivity"
            android:parentActivityName=".ui.ManageNoteActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ManageNoteActivity" />
        </activity>

        <activity
            android:label=""
            android:name=".ui.SelectTraitsActivity"
            android:parentActivityName=".ui.ManageNoteActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ManageNoteActivity" />
        </activity>

    </application>
</manifest>
