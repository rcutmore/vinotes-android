<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.robcutmore.vinotes.AddNoteActivity">

    <TextView
        android:id="@+id/tvTastingDate"
        android:gravity="center"
        android:hint="@string/text_view_add_note_tasting_date_hint"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="showDatePickerDialog"
        android:padding="16dip"
        style="@android:style/Widget.DeviceDefault.Light.Spinner" />

    <EditText
        android:id="@+id/etWinery"
        android:gravity="center"
        android:hint="@string/edit_text_add_note_winery_hint"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="16dip" />

    <EditText
        android:id="@+id/etWine"
        android:gravity="center"
        android:hint="@string/edit_text_add_note_wine_hint"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="16dip" />

    <EditText
        android:id="@+id/etVintage"
        android:gravity="center"
        android:hint="@string/edit_text_add_note_vintage_hint"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="16dip" />

    <RatingBar
        android:id="@+id/rbRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>